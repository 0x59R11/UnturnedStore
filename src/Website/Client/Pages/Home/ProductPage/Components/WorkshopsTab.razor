@using Website.Client.Shared.Components.Products

@if (Product != null)
{
    @if (WorkshopResult != null)
    {
        @foreach (MProductWorkshopItem workshopItem in Product.WorkshopItems.OrderByDescending(w => w.IsRequired).ThenBy(w => w.UseableFileId))
        {
            <ProductWorkshopItem WorkshopItem="workshopItem" WorkshopResult="WorkshopResult.GetSuccessItem(workshopItem.UseableFileId)" SellerSteamId="@Product.Seller.SteamId" />
        }
    } else
    {
        <Progressbar />
    }
}
