@page "/"

<div class="text-center mb-3">
    <img src="/img/header.png" style="max-height: 150px;" />
    <h4 class="fw-bold">Restore Monarchy Plugins</h4>
    <h6 class="text-muted">Simple & Affordable Unturned Plugins</h6>
</div>
@if (isSuccessPayment)
{
    <div class="alert alert-success" role="alert">
        Thank you for purchase, it may take PayPal up to 24 hours to process your payment
    </div>
}
@if (Products != null)
{
    <div class="mb-3" align="right">
        <div class="input-group" style="width: 500px;">
            <span class="input-group-text">Search Plugin</span>
            <input type="text" class="form-control" placeholder="Name or Author" @bind="searchString" @bind:event="oninput" />
        </div>
        
    </div>
    <div class="mb-3">
        <div class="row row-cols-1 row-cols-sm-2 justify-content-center">
            @foreach (var product in OrderedProducts)
            {
                <div class="m-2 col bg-light rounded border-2 border" style="width: 350px; height: 150px;">
                    <div class="d-flex align-items-center text-center" style="margin-top: -20px;">
                        <a href="/products/@product.Id">
                            <img src="api/images/@product.ImageId" width="85" height="85" />
                        </a>
                        <div class="ms-1 text-center w-100">
                            <a class="ms-2 text-center w-100" href="/products/@product.Id">@product.Name</a> <br />
                            <small class="text-muted">Author: @product.Seller.Name</small>
                        </div>

                    </div>
                    <div>
                        <div class="mt-auto" style="height: 50px;">
                            <small style="vertical-align: middle;">@product.Description</small>
                        </div>

                        <div class="d-flex mt-auto">
                            <div>
                                <small class="text-muted"><i class="bi bi-download"></i> @product.TotalDownloadsCount</small>
                            </div>
                            @if (product.Price > 0)
                            {
                                <p class="ms-auto text-muted">Price: $@product.Price</p>
                            }
                            else
                            {
                                <p class="ms-auto text-muted">Price: Free</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
}


